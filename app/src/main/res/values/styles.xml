<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/Button</item>
        <item name="android:textViewStyle">@style/AppTheme.TextAppearance</item>

    </style>

    <style name="AppTheme.TextAppearance" parent="@android:style/TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/HelveticaNeueCyr-Heavy.otf</item>
        <item name="android:textColor">@color/ef_grey</item>
    </style>

    <style name="AppTheme.TextAppearance.Yellow" parent="AppTheme.TextAppearance">
        <item name="android:textColor">@color/ef_yellow</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
    </style>

    <style name="AppTheme.TextAppearance.Yellow.Big" parent="AppTheme.TextAppearance.Yellow">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bordered_shape</item>
        <item name="android:textColor">@color/ef_grey</item>
        <item name="fontPath">fonts/HelveticaNeueCyr-Heavy.otf</item>
    </style>

    <style name="Button.Grey" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/ef_grey</item>
        <item name="android:textColor">@color/ef_orange</item>
        <item name="fontPath">fonts/HelveticaNeueCyr-Heavy.otf</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Transparent" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/ef_grey</item>
        <item name="fontPath">fonts/HelveticaNeueCyr-Heavy.otf</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Yellow" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bordered_shape_transparent</item>
        <item name="android:textColor">@color/ef_yellow</item>
        <item name="fontPath">fonts/HelveticaNeueCyr-Heavy.otf</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Black" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@color/ef_yellow</item>
        <item name="fontPath">fonts/HelveticaNeueCyr-Heavy.otf</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Button.Round.Grey.Orange" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_button_grey</item>
        <item name="android:textColor">@color/ef_orange</item>
        <item name="fontPath">fonts/HelveticaNeueCyr-Heavy.otf</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="Button.Round.Grey.Yellow" parent="Button.Round.Grey.Orange">
        <item name="android:textColor">@color/ef_yellow</item>
    </style>

    <style name="Button.Round.Yellow.Grey" parent="Button.Round.Grey.Orange">
        <item name="android:textColor">@color/ef_grey</item>
        <item name="android:background">@drawable/round_button_yellow</item>
    </style>

    <style name="HorizontalPadding">
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
    </style>

    <style name="SettingsAccountTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/background_gray</item>
        <item name="android:padding">@dimen/horizontal_padding</item>
    </style>

    <style name="SettingsListItemTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsListItemValue">
        <item name="android:textColor">@color/gray</item>
    </style>

    <dimen name="horizontal_padding">15dp</dimen>
    <color name="gray">#ff808080</color>
    <color name="background_gray">#ffcccccc</color>
    <color name="black">#000</color>
</resources>
