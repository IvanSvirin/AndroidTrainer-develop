<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/bordered_shape"
              android:minHeight="@dimen/training_min_height"
              android:layout_marginBottom="@dimen/program_item_margin"
              android:layout_marginLeft="@dimen/program_item_margin"
              android:layout_marginRight="@dimen/program_item_margin"
    >

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:letterSpacing="@dimen/letter_spacing"
        android:textAllCaps="true"
        android:paddingLeft="@dimen/padding_normal"
        />
</LinearLayout>